{
  "manifest_version": 2,
  "name": "@jackdotjs/auto-clear-cache",
  "description": "Automatically clears your browsing data on a regular basis.",
  "version": "1.0.0",
  "permissions": [
    "browsingData",
    "storage",
    "alarms",
    "http://localhost/*",
    "tabs"
  ],
  "optional_permissions": [
    "notifications"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{CE7F5E81-77D0-49AF-A480-FF3F5581F4E9}"
    }
  },
  "commands": {
    "wxt:reload-extension": {
      "description": "Reload the extension during development",
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "content_security_policy": "script-src 'self' http://localhost:3000; object-src 'self';"
}