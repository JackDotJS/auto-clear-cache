{
  "manifest_version": 3,
  "name": "Auto Clear Cache",
  "description": "Automatically clears your browsing data on a regular basis.",
  "version": "1.0.0",
  "homepage_url": "https://github.com/JackDotJS/auto-clear-cache",
  "author": "JackDotJS",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "browsingData",
    "storage",
    "alarms",
    "tabs",
    "scripting"
  ],
  "optional_permissions": [
    "notifications"
  ],
  "options_ui": {
    "page": "options.html"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon/light_16x.png",
      "32": "icon/light_32x.png",
      "64": "icon/light_64x.png"
    },
    "theme_icons": [
      {
        "dark": "icon/dark_16x.png",
        "light": "icon/light_16x.png",
        "size": 16
      },
      {
        "dark": "icon/dark_32x.png",
        "light": "icon/light_32x.png",
        "size": 32
      },
      {
        "dark": "icon/dark_64x.png",
        "light": "icon/light_64x.png",
        "size": 64
      }
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{CE7F5E81-77D0-49AF-A480-FF3F5581F4E9}"
    }
  },
  "commands": {
    "wxt:reload-extension": {
      "description": "Reload the extension during development",
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  },
  "host_permissions": [
    "http://localhost/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:3000; object-src 'self';",
    "sandbox": "script-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:3000; sandbox allow-scripts allow-forms allow-popups allow-modals; child-src 'self';"
  }
}